{
  "name": "tauri-plugin-serialport-api",
  "version": "2.1.4",
  "author": "eleroy <edoleroy@gmail.com>",
  "description": "A tauri plugin developed based on Serialport.",
  "type": "module",
  "types": "./dist-js/index.d.ts",
  "main": "./dist-js/index.js",
  "module": "./dist-js/index.js",
  "exports": {
    "types": "./dist-js/index.d.ts",
    "import": "./dist-js/index.js",
    "require": "./dist-js/index.js"
  },
  "license": "MIT",
  "scripts": {
    "build": "rollup -c",
    "format": "prettier --write \"./**/*.{cjs,mjs,js,jsx,mts,ts,tsx,html,css,json}\" --ignore-path .prettierignore",
    "release": "release-it"
  },
  "devDependencies": {
    "@release-it/bumper": "^7.0.5",
    "@rollup/plugin-node-resolve": "^16.0.1",
    "@rollup/plugin-terser": "^0.4.4",
    "@rollup/plugin-typescript": "^12.1.2",
    "prettier": "^3.5.3",
    "release-it": "^19.0.3",
    "rollup": "^4.36.0",
    "tslib": "^2.8.1",
    "typescript": "^5.8.2"
  },
  "dependencies": {
    "@tauri-apps/api": "^2.9.0"
  },
  "packageManager": "yarn@4.9.2",
  "repository": "https://github.com/eleroy/tauri-plugin-serialport.git",
  "release-it": {
    "$schema": "https://unpkg.com/release-it/schema/release-it.json",
    "github": {
      "release": true
    },
    "npm": {
      "publish": false
    },
    "hooks": {
      "after:bump": "yarn build"
    },
    "plugins": {
      "@release-it/bumper": {
        "out": {
          "file": "Cargo.toml",
          "type": "text/toml",
          "path": "package.version"
        }
      }
    }
  }
}
